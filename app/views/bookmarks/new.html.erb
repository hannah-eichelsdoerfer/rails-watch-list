<div class="row justify-content-center">
  <div class="col-lg-6">
    <div class="d-flex flex-row justify-content-between align-items-center">
      <h1>Create a new bookmark</h1>
    <%= link_to fa_icon('times'), list_path(@list) %>
    </div>

    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :list, collection: List.all.order(:name), prompt: 'Select the list you want to add it to', selected: @list.id %>
      <%= f.association :movie, collection: Movie.all.order(:title), prompt: 'Select a movie' %>
      <%= f.input :comment, placeholder: 'Enter a comment about the movie', :input_html => {:rows => 5} %>
      <%= f.submit class: 'btn btn-flat' %>
    <% end %>
  </div>
</div>
